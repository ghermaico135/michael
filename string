#A.population density of any region
pop_num=int(input("please insert population of any region \n"))
pop_area=int(input("please insert area of any region \n"))
pop_density=int(pop_num/pop_area)
print("the population density is")
print(pop_density)

#B.Sales from monday to friday
sum=0.0
mon=float(input("please insert the sales of days "))
tues=float(input("please insert the sales of days "))
wen=float(input("please insert the sales of days "))
thur=float(input("please insert the sales of days "))
fri=float(input("please insert the sales of days "))
sum= mon + tues + wen + thur + fri
print("the sum of the sales is")
print(sum)
